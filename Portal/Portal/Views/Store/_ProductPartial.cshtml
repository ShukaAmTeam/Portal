@model Portal.Entities.Product

<div class="product-details">
    <h2>@Model.Name</h2>

    <p>
        <img alt="@Model.Name" src="@Url.Content(Model.ImageUrl)" />
    </p>

    <div class="category-details">
        <p>
            <em>Category:</em>
            @Model.Subcategory.Category.Name

            <em>Subcategory:</em>
            @Model.Subcategory.Name
        </p>
        <p>
            <em>Price:</em>
            @Html.DisplayFor(m => m.Price)
        </p>
        <p class="button">
            @* @Html.ActionLink("Add to Cart", "AddtoCart", new { controller = "ShoppingCart", productId = Model.Id })*@
        </p>
    </div>
</div>